<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thelittlefireman.appkillermanager">

    <uses-permission android:name="oppo.permission.OPPO_COMPONENT_SAFE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <!-- General -->
        <intent>
            <action android:name="android.settings.IGNORE_BATTERY_OPTIMIZATION_SETTINGS" />
            <data android:scheme="*" />
        </intent>
        <intent>
            <action android:name="android.settings.APPLICATION_DETAILS_SETTINGS" />
            <data android:scheme="*" />
        </intent>

        <!-- Asus -->
        <package android:name="com.asus.mobilemanager" />

        <!-- HTC -->
        <package android:name="com.htc.pitroad" />

        <!-- Huawei -->
        <package android:name="com.huawei.systemmanager" />

        <intent>
            <action android:name="huawei.intent.action.HSM_PROTECTED_APPS" />
        </intent>
        <intent>
            <action android:name="huawei.intent.action.HSM_BOOTAPP_MANAGER" />
        </intent>
        <intent>
            <action android:name="huawei.intent.action.NOTIFICATIONMANAGER" />
        </intent>

        <!-- Letv-->
        <package android:name="com.letv.android.letvsafe" />

        <!-- Meizu -->
        <package android:name="com.meizu.safe" />

        <intent>
            <action android:name="com.meizu.safe.security.SHOW_APPSEC" />
        </intent>
        <intent>
            <action android:name="com.meizu.power.PowerAppKilledNotification" />
        </intent>

        <!-- OnePlus -->
        <package android:name="com.oneplus.security" />

        <!-- Oppo -->
        <package android:name="com.coloros.safecenter" />
        <package android:name="com.color.oppoguardelfr" />
        <package android:name="com.oppo.safe" />

        <!-- Samsung -->
        <package android:name="com.samsung.android.lool" />
        <package android:name="com.samsung.android.sm_cn" />
        <package android:name="com.samsung.android.sm" />
        <package android:name="com.samsung.memorymanager" />

        <intent>
            <action android:name="com.samsung.android.sm.ACTION_BATTERY" />
        </intent>
        <intent>
            <action android:name="com.samsung.android.sm.ACTION_SM_NOTIFICATION_SETTING" />
        </intent>

        <!-- Vivo -->
        <package android:name="com.iqoo.secure" />
        <package android:name="com.vivo.permissionmanager" />
        <package android:name="com.vivo.abe" />

        <!-- XiaoMi -->
        <package android:name="com.miui.securitycenter" />
        <package android:name="com.miui.powerkeeper" />

        <!-- ZTE -->
        <package android:name="com.zte.heartyservice" />
    </queries>
</manifest>

